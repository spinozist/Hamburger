<h1>Make Burgers</h1>
<form id="new-burger-input">
    <input id="burger-name" type="text" placeholder="Enter burger name">
    <button type="sutbmit">Submit</button>
</form>
<h2>Ready to eat</h2>
<ul id="burger-list">
    {{#each burgers}}
    {{#unless devoured}}
    <li>{{ burger_name }}</li>
    {{/unless}}
    {{/each}}
</ul>
<h2>Eaten :)</h2>
<ul id="devoured-list">
    {{#each burgers}}
    {{#if devoured}}
    <li class="devoured">{{ burger_name }}</li>
    {{/if}}
    {{/each}}
</ul>
</div>